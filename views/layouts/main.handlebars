<!doctype html>
<html class="no-js" lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AnswerIt</title>
    <link rel="stylesheet" href="/css/foundation.min.css">
    <link rel="stylesheet" href="/css/app.css">

    {{#if google_id}}
        <script>
            (function (i, s, o, g, r, a, m) {
                i['GoogleAnalyticsObject'] = r;
                i[r] = i[r] || function () {
                            (i[r].q = i[r].q || []).push(arguments)
                        }, i[r].l = 1 * new Date();
                a = s.createElement(o),
                        m = s.getElementsByTagName(o)[0];
                a.async = 1;
                a.src = g;
                m.parentNode.insertBefore(a, m)
            })(window, document, 'script', 'https://www.google-analytics.com/analytics.js', 'ga');

            ga('create', '{{google_id}}', 'auto');
            ga('send', 'pageview', location.pathname);

        </script>
    {{/if}}
</head>
<body>
<div class="top-bar">
    <div class="top-bar-left">
        <ul class="menu">
            <li class="menu-text"><a href="/">AnswerIt</a></li>
            <li class="menu-item"><a href="/search">Search</a></li>
            <li class="menu-item"><a href="/question/list">Browse</a></li>
            {{#if user.canEdit}}
                <li class="menu-item"><a href="/question/add">Add</a></li>
            {{/if}}

        </ul>
    </div>

    <div class="top-bar-right">
        <ul class="menu menu-item" data-responsive-menu="drilldown medium-dropdown">
            <li class="has-submenu menu-item">
                <a href="#">{{user.displayname}}</a>
            </li>
            <li class="menu-item"><a href="/logout">Logout</a></li>
        </ul>
    </div>
</div>
<div class="header">
    <div class="row">
        <div class="large-7 large-offset-1 medium-7 medium-offset-1 columns">
            <h1 class="header-title hide-for-small">AnswerIt</h1>
            <p>Database of previously asked questions and their answers</p>
        </div>
        <div class="large-3 large-offset-1 medium-3 medium-offset-1 columns">
            <br>
            <form action="/search" method="post">
                <div class="row collapse">
                    <div class="large-9 columns">
                        <input name="keywords" type="search" placeholder="Quick search">
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
</div>


<div class="row" style="margin-top: 30px;">
    <div class="large-10 large-offset-1 medium-10 medium-offset-1 small-10 small-offset-1 columns">
        {{{body}}}
    </div>
</div>

<script src="/js/vendor/jquery.js"></script>
<script src="/js/vendor/what-input.js"></script>
<script src="/js/vendor/foundation.min.js"></script>
<script src="/js/app.js"></script>
</body>
</html>
