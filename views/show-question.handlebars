<div class="row" >
    <div class="large-10 medium-10 columns">

        <small>{{dateFormat question.created "dddd, MMMM Do YYYY"}}</small>
        <h4>
        <div class="question">{{question.text}}</div>
        </h4>
        <br>
        <h5>{{answers.length}} Answer(s)</h5>
        <hr>
        {{#each answers}}
            <div class="answer">
                <small>{{dateFormat this.created "dddd, MMMM Do YYYY"}}</small>
                <P class="an-answer">{{this.text}}</P>

                {{#if ../user.admin}}
                    <form name="deleteForm" method="post" action="/question/deleteanswer">
                        <input type="hidden" name="question" value="{{../question.id}}">
                        <input type="hidden" name="answer" value="{{this.id}}">
                        <button class="button small" type="submit">Delete this answer</button>
                    </form>
                {{/if}}

            </div>
            <hr>
        {{/each}}

        {{#if user.canEdit}}
        <p><a class="button radius" href="/question/addanswer/{{question.id}}">Add another answer to this question</a></p>
        {{/if}}
    </div>
</div>

