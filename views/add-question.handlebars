<!doctype html>
<html class="no-js" lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Foundation for Sites</title>
    <link rel="stylesheet" href="/css/foundation.css">
    <link rel="stylesheet" href="/css/app.css">
</head>
<body>
<div class="top-bar">
    <div class="top-bar-left">
        <ul class="dropdown menu" data-dropdown-menu>
            <li class="menu-text">AnswerIt</li>
            <li><a href="#">Search</a></li>
            <li><a href="#">Add/Update</a></li>
        </ul>
    </div>
    <div class="top-bar-right">
        <ul class="menu">
            <li><input type="search" placeholder="Search"></li>
            <li>
                <button type="button" class="button">Search</button>
            </li>
        </ul>
    </div>
</div>
<div class="header">
    <div class="row">
        <div class="large-12 columns">
            <h1 class="header-title hide-for-small">AnswerIt</h1>
        </div>
    </div>
</div>

<div class="row">
    <div class="large-12 columns">
        <div class="callout">
            <h3>The Q & A database</h3>
            <p>Search for previously asked questions and their answers</p>
        </div>
    </div>
</div>

<div class="row">
    <div class="large-8 medium-8 columns">

        <h5>Add a new question</h5>
        <form>
            <div class="row">
                <div class="large-12 columns">
                    <label>Question</label>
                    <input type="text" placeholder="What's the question?"/>
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    <label>Answer</label>
                    <textarea type="text" placeholder="Enter the answer"> </textarea>
                </div>
            </div>
            <button type="submit" class="button">Search</button>
        </form>
    </div>

    <div class="large-4 medium-4 columns">
        <h5>Try one of these buttons:</h5>
        <p><a href="#" class="button">Simple Button</a><br/>
            <a href="#" class="success button">Success Btn</a><br/>
            <a href="#" class="alert button">Alert Btn</a><br/>
            <a href="#" class="secondary button">Secondary Btn</a></p>
    </div>
</div>

<script src="/js/vendor/jquery.js"></script>
<script src="/js/vendor/what-input.js"></script>
<script src="/js/vendor/foundation.js"></script>
<script src="/js/app.js"></script>
</body>
</html>
