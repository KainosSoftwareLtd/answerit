
<div class="row">
    <div class="large-8 medium-8 columns">

        <h5>Add a new question</h5>
        <form action="/question/add" method="post">
            <div class="row">
                <div class="large-12 columns">
                    <label>Question</label>
                    <input name="question" type="text" placeholder="What's the question?"/>
                </div>
            </div>
            <div class="row">
                <div class="large-12 columns">
                    <label>Answer</label>
                    <textarea name="answer" type="text" rows="10" placeholder="What's the answer"></textarea>
                </div>
            </div>
            <button type="submit" class="button">Add</button>
        </form>
    </div>

    <div class="large-4 medium-4 columns">
        <h5>Tags:</h5>
        <p><a href="#" class="button">Tag1</a>
